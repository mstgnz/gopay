# Application Settings
APP_NAME=gopay
APP_PORT=9999
APP_ENV=development
APP_URL=http://localhost:9999

# Security Settings
API_KEY=your_super_secret_api_key_here_change_this_in_production
RATE_LIMIT_PER_MINUTE=100

# Optional: IP Whitelisting (comma-separated)
# IP_WHITELIST=127.0.0.1,192.168.1.100,10.0.0.5

COMPOSE_FILE=docker-compose.yml

# Postgres
DB_HOST=${APP_NAME}-postgres
DB_PORT=5432
DB_NAME=gopay
DB_ZONE=Europe/Istanbul
DB_USER=postgres
DB_PASS=pass

# Log Settings
ENABLE_LOGGING=true
LOGGING_LEVEL=info
LOG_RETENTION_DAYS=30
