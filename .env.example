# Application Settings
APP_NAME=gopay
APP_PORT=9999
APP_ENV=development
APP_URL=http://localhost:9999

# Security Settings
API_KEY=your_super_secret_api_key_here_change_this_in_production
RATE_LIMIT_PER_MINUTE=100

# Optional: IP Whitelisting (comma-separated)
# IP_WHITELIST=127.0.0.1,192.168.1.100,10.0.0.5

# OpenSearch Settings
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USER=
OPENSEARCH_PASSWORD=
ENABLE_OPENSEARCH_LOGGING=true
LOGGING_LEVEL=info
LOG_RETENTION_DAYS=30

# Payment Provider Configurations

# Iyzico Configuration
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_ENVIRONMENT=sandbox  # or production

# OzanPay Configuration  
OZANPAY_API_KEY=your_ozanpay_api_key
OZANPAY_SECRET_KEY=your_ozanpay_secret_key
OZANPAY_MERCHANT_ID=your_ozanpay_merchant_id
OZANPAY_ENVIRONMENT=sandbox  # or production

